<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="seongju.remaapi.dao.ReviewDao">

    <!-- 기본 날짜 조회 -->
    <select
            id="getDefaultReviewDate"
            resultType="reviewVo"
            parameterType="String"
    >
        select
            *
        from REVIEW_DATE
        where
            MEMBER_ID = #{member_id}
            AND IS_DEFAULT = 1
    </select>

    <!-- 새로운 아이디 -->
    <select id="selectNewNO" resultType="int"  >
		<![CDATA[
        SELECT  nvl(max(ID), 0) + 1 from REVIEW_DATE
        ]]>
	</select>


    <!-- 날짜 조회 -->
    <select
            id="getReviewDateList"
            resultType="reviewVo"
            parameterType="java.util.Map"
    >
        select
            id,
               "DATE" ,
               NOTE_ID
        from REVIEW_DATE
        where
              MEMBER_ID = #{member_id}
          AND NOTE_ID = #{id}
    </select>

    <!-- 초기추가 -->
    <insert id="addReviewDate" parameterType="java.util.Map">
		<![CDATA[
        insert into REVIEW_DATE(
            id,
            NOTE_ID,
                                "DATE",
            MEMBER_ID
        )
        values(
                  #{id},
                  #{note_id},
               sysdate,
                  #{member_id}
              )
        ]]>
	</insert>

    <!-- 내용 변경 -->
    <update id="UpdateReviewDate" parameterType="java.util.Map">
        update REVIEW_DATE
        set "DATE" = to_date(#{date},'YYYY-MM-DD')
        where
            ID = #{id}
          AND MEMBER_ID=#{member_id}
    </update>

</mapper>